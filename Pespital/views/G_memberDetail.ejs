        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(function () {
            $("#edit").click(function () {
                if (confirm("수정하시겠어요?")) {
                    $("form").attr({
                        "method": "post",
                        "action": "/member/detail/a_edit"
                    });
                    $("form").submit();
                }
            });
            $("#del").click(function () {
                if (confirm("삭제하시겠어요?")) {
                    $("form").attr({
                        "method": "post",
                        "action": "/member/detail/a_delete"
                    });
                    $("form").submit();
                }
            });
        });
