    <style>
        img {
            max-width: 100%;
            height: auto !important;
        }

        ul {
            list-style: none;
        }
    </style>
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-8 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-8" style="margin: auto">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">회원정보보기</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="text" name="member_id" value="<%=member.member_id%>" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="아이디" readonly>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="password" value="<%=member.password%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="비밀번호">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="member_name" value="<%=member.member_name%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="이름" readonly>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="email_id" value="<%=member.email_id%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="이메일" >
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="member_phone" value="<%=member.member_phone%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="연락처" >
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="member_nickname" value="<%=member.member_nickname%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="닉네임" readonly>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="regdate" value="<%=member.regdate%>" class="form-control form-control-user"
                                                id="exampleInputEmail" placeholder="등록날짜" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>관리자<input type="radio" name="type_id" value="1" class="form-control form-control-user" <%if(member.type_id==1){%>checked<%}%>></label>
                                            <label>일반<input type="radio" name="type_id" value="2" class="form-control form-control-user" <%if(member.type_id==2){%>checked<%}%>></label>
                                            <label>의사<input type="radio" name="type_id" value="3" class="form-control form-control-user" <%if(member.type_id==3){%>checked<%}%>></label>
                                        </div>
                                        <hr>
                                        <div class="form-group row">
                                            <div class="col-sm-4 mb-3 mb-sm-0 text-center">
                                                <a href="/member/list" class="btn btn-primary btn-user btn-block">
                                                    목록
                                                </a>
                                            </div>
                                            <div class="col-sm-4 mb-3 mb-sm-0 text-center">
                                                <a id="edit" class="btn btn-facebook btn-user btn-block">
                                                    수정
                                                </a>
                                            </div>
                                            <div class="col-sm-4 mb-3 mb-sm-0 text-center">
                                                <a id="del" class="btn btn-google btn-user btn-block">
                                                    삭제
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
